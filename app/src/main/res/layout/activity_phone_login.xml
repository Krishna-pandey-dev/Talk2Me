<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhoneLoginActivity"
    android:background="@drawable/background1">

    <EditText
        android:id="@+id/phone_nnumber_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="180dp"
        android:background="@drawable/ex_bg"
        android:padding="8dp"
        android:hint="Write Your Phone Number..."
        android:textColorHint="@color/white"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="15dp"
        android:drawableStart="@drawable/phone"
        />

    <EditText
        android:id="@+id/verification_code_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone_nnumber_input"
        android:layout_alignParentStart="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="17dp"
        android:background="@drawable/ex_bg"
        android:drawableStart="@drawable/password_icon"
        android:hint="Write Your Verification Code..."
        android:padding="8dp"
        android:textAllCaps="false"
        android:textColorHint="@color/white"
        android:textSize="15dp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <Button
    android:id="@+id/send_ver_code_button"
    android:layout_below="@id/verification_code_input"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:text="Send Verification Code"
    android:textColor="@color/white"
    android:textAllCaps="false"
    android:layout_marginStart="80dp"
    android:layout_marginEnd="17dp"
    android:layout_marginTop="14dp"
    android:background="@drawable/button_background"
    android:textSize="18sp"
    />

    <Button
        android:id="@+id/verify_button"
        android:layout_below="@id/send_ver_code_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Verify"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/button_background"
        android:textSize="18sp"
        android:visibility="invisible"
        />

</RelativeLayout>